---
import "../styles/global.css";
---

<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio interactivo en modo terminal" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar.svg" />
    <title>Portfolio | Terminal</title>
  </head>
  <body
    class="min-h-screen flex items-center justify-center bg-terminal-bg text-terminal-text"
  >
    <div class="fixed top-4 right-4 z-50">
      <div id="theme-switcher"></div>
    </div>

    <main class="w-full max-w-3xl mx-auto p-4">
      <slot />
    </main>

    <script>
      import React from "react";

      const savedTheme = localStorage.getItem("theme") || "one-dark";
      document.documentElement.setAttribute("data-theme", savedTheme);

      import("../components/ThemeSwitcher").then(
        ({ default: ThemeSwitcher }) => {
          const container = document.getElementById("theme-switcher");
          if (container) {
            // @ts-ignore
            ReactDOM.createRoot(container).render(
              React.createElement(ThemeSwitcher)
            );
          }
        }
      );
    </script>
  </body>
</html>
